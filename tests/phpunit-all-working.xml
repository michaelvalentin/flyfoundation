<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals               = "false"
        backupStaticAttributes      = "false"
        colors                      = "true"
        convertErrorsToExceptions   = "true"
        convertNoticesToExceptions  = "true"
        convertWarningsToExceptions = "true"
        processIsolation            = "false"
        stopOnFailure               = "false"
        syntaxCheck                 = "false"
        >

    <testsuites>
        <testsuite name="FlyFoundation Test Suite">
            <directory>CoreTests</directory>
            <directory>DatabaseTests</directory>
            <directory>FactoryTests</directory>
            <directory>FormTests</directory>
            <directory>LsdParserTests</directory>
            <directory>ModelTests</directory>
            <directory>SystemDefinitionTests</directory>
            <directory>UtilTests</directory>
        </testsuite>
    </testsuites>

</phpunit>